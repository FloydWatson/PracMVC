@model IEnumerable<PracWebApp.Models.AnimeModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Anime", "AddAnime")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnimeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeasonCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EpisodeCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnimeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeasonCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EpisodeCount)
        </td>
        
    </tr>
}

</table>
